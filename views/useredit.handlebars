<h1>Editing: {{user.name}} </h1>

<form action="/users/update" method="post" class="form">

    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Name:</label>
        <input type="text" placeholder="Name:" name="name" value="{{user.name}}">
    </div>

    <div class=" form-control">
        <label for="occupation">occupation:</label>
        <input type="text" placeholder="Occupation: " name="occupation" value="{{user.occupation}}">
    </div>

    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" placeholder="newsletter: " name="newsletter" checked>
        {{else}}
        <input type="checkbox" placeholder="newsletter: " name="newsletter">
        {{/if}}
        <label for="newsletter">Send promotions</label>
    </div>

    <input type="submit" value="Edit">
</form>
<div class="address-container">
    <h2>Address: </h2>
    <form action="/address/create" method="post">
        <input type="hidden" name="UserId" value="{{user.id}}">

        <div class="form-control">
            <label for="street">Street:</label>
            <input type="text" name="street" placeholder="Street:">
        </div>

        <div class="form-control">
            <label for="number">Number:</label>
            <input type="text" name="number" placeholder="Number:">
        </div>

        <div class="form-control">
            <label for="City">City:</label>
            <input type="text" name="city" placeholder="City:">
        </div>

        <input type="submit" value="Include address">

    </form>
    <div class="address-list">
        <h2>List of Address</h2>

        {{#each user.Addresses}}

        <div>"{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}

            <form action="/address/delete" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="UserId" value="{{this.UserId}}">
                <input type="submit" value="delete">
            </form>
        </div>

        {{/each}}
    </div>
</div>